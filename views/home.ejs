    <title>List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
      }
      h1 {
        color: rgb(93, 83, 69);
        text-align: center;
        margin: 10px;
      }
      header {
        background-color: antiquewhite;
        width: 100%;
        height: 70px;
        box-shadow: 0 0 12px gray;
        > ul {
          height: 100%;
          list-style: none;
          display: flex;
          flex-direction: row;
          justify-content: flex-start;
          align-items: center;
          > li {
            margin-right: 24px;
            > a {
              text-decoration: none;
              font-size: 25px;
              color: rgb(92, 69, 69);
              font-weight: 600;
              padding: 20px;
              transition: all 0.3s ease-in-out;
              &:hover {
                background-color: rgb(255, 215, 167);
              }
              &:active {
                background-color: rgb(253, 178, 79);
              }
            }
          }
        }
      }

      .card-container {
    display: flex;
    flex-wrap: wrap; /* Ensures cards wrap to the next line if there isn't enough space */
    justify-content: center; /* Centers the cards horizontally */
  }

  .card {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    max-width: 300px;
    margin: 20px; /* Add some margin around each card */
    text-align: center;
    font-family: arial;
    padding: 20px; /* Add padding inside the card */
    border-radius: 8px; /* Add border radius for rounded corners */
    background-color: #f9f9f9; /* Set a light background color */
    transition: transform 0.3s; /* Add a smooth hover effect */
  }

  .card:hover {
    transform: scale(1.05); /* Scale up the card slightly on hover */
  }

  .price {
    color: grey;
    font-size: 22px;
    margin-top: 10px; /* Add some space between the name and price */
  }
    </style>
  </head>
