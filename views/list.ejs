    <header>
      <ul>
        <li>
          <a href="/list">List</a>
          <a href="/create">Add Product</a>
          <a href="/admin">Admin</a>
          <a href="/home">Home</a>
        </li>
      </ul>
    </header>
    <h1 class="">List Page</h1>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr class="table-primary">
          <!-- <th>No.</th> -->
          <th>Name</th>
          <th>Price</th>
          <th>Image</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(let p of pros) { %>
        <tr class="align-middle">
          <!-- <td><%= p.id %></td> -->
          <td><%= p.name %></td>
          <td><%= p.price %></td>
          <td>
            <img style="height: 100px" src="images/<%=p.image%>" alt="" />
          </td>
          <td>
            <a class="btn btn-info" href="/list/<%=p.id%>">Detail</a>
            <a class="btn btn-warning" href="/edit/<%=p.id%>">Edit</a>
            <a
              href="/delete/<%=p.id%>"
              class="btn btn-danger"
              onclick="return confirm('Confirm Delete?')"
              >Delete</a
            >
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
